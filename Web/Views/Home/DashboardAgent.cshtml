@{
    ViewBag.Title = "Agent Dashboard";
}

<style>
    /* Agent Dashboard Specific Styles - YELLOW/ORANGE THEME */
    .bg-gradient-agent {
        background: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%) !important;
    }
</style>

<!-- AGENT DASHBOARD MARKER -->
<div class="alert alert-warning mb-4">
    <strong>?? AGENT DASHBOARD</strong> - You are viewing the Sales Agent panel
</div>

<!-- Agent Welcome Banner -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 bg-gradient-agent text-dark shadow-lg">
            <div class="card-body p-4">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h2 class="mb-2">
                            <i class="fas fa-user-tie me-2"></i>
                            ?? Agent Dashboard - Welcome @Session["FullName"]!
                        </h2>
                        <p class="mb-0 opacity-75">
                            <i class="fas fa-shopping-bag me-2"></i>Product Catalog & Sales Overview
                            <span class="ms-3"><i class="fas fa-calendar-alt me-2"></i>@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</span>
                        </p>
                    </div>
                    <div class="col-md-4 text-end d-none d-md-block">
                        <i class="fas fa-chart-area fa-4x opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Agent Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-left-primary shadow-sm h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-2">
                            <i class="fas fa-box-open me-1"></i> Total Products
                        </div>
                        <div class="stat-number mb-0">
                            @ViewBag.TotalProductsCount
                        </div>
                        <small class="text-muted">
                            <i class="fas fa-check-circle me-1"></i> In Catalog
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                            <i class="fas fa-box-open fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-left-success shadow-sm h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-2">
                            <i class="fas fa-check-double me-1"></i> Available
                        </div>
                        <div class="stat-number mb-0">
                            @ViewBag.AvailableProducts
                        </div>
                        <small class="text-muted">
                            <i class="fas fa-thumbs-up me-1"></i> In Stock
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3">
                            <i class="fas fa-check-double fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-left-info shadow-sm h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-2">
                            <i class="fas fa-shopping-cart me-1"></i> Total Orders
                        </div>
                        <div class="stat-number mb-0">
                            @ViewBag.TotalOrders
                        </div>
                        <small class="text-muted">
                            <i class="fas fa-calendar-check me-1"></i> All Time
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3">
                            <i class="fas fa-shopping-cart fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-left-warning shadow-sm h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
                            <i class="fas fa-dollar-sign me-1"></i> Today's Sales
                        </div>
                        <div class="stat-number mb-0" style="font-size: 1.5rem;">
                            $@ViewBag.TodayRevenue?.ToString("N2")
                        </div>
                        <small class="text-muted">
                            <i class="fas fa-arrow-up me-1"></i> @ViewBag.TodayOrders orders
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                            <i class="fas fa-dollar-sign fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Agent Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-lg border-0">
            <div class="card-header py-3 bg-warning text-dark">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-bolt me-2"></i>?? AGENT TOOLS - Quick Actions (VIEW ONLY)
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Note:</strong> As an Agent, you have view-only access to products and orders.
                </div>
                <div class="row text-center g-3">
                    <div class="col-md-6 col-12">
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center" style="min-height: 120px;">
                            <i class="fas fa-th fa-3x mb-3"></i>
                            <span class="fw-bold fs-5">Browse Product Catalog</span>
                            <small class="opacity-75 mt-2">View all available products</small>
                        </a>
                    </div>
                    <div class="col-md-6 col-12">
                        <a href="@Url.Action("Index", "Orders")" class="btn btn-success btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center" style="min-height: 120px;">
                            <i class="fas fa-file-invoice-dollar fa-3x mb-3"></i>
                            <span class="fw-bold fs-5">View Orders</span>
                            <small class="opacity-75 mt-2">Check order status & history</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Top Selling Products -->
    <div class="col-md-8 mb-4">
        <div class="card shadow-lg border-0">
            <div class="card-header py-3 d-flex align-items-center bg-warning text-dark">
                <i class="fas fa-trophy me-2"></i>
                <h6 class="m-0 font-weight-bold">?? Top Selling Products</h6>
            </div>
            <div class="card-body">
                @if (ViewBag.TopProducts != null)
                {
                    var topProducts = ViewBag.TopProducts as List<AWEElectronics.DTO.ProductSalesReport>;
                    if (topProducts != null && topProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-warning">
                                    <tr>
                                        <th><i class="fas fa-medal"></i> Rank</th>
                                        <th><i class="fas fa-box"></i> Product</th>
                                        <th><i class="fas fa-sort-amount-down"></i> Units Sold</th>
                                        <th><i class="fas fa-dollar-sign"></i> Revenue</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < topProducts.Count; i++)
                                    {
                                        var product = topProducts[i];
                                        var rankBadgeClass = i == 0 ? "bg-warning" : i == 1 ? "bg-secondary" : i == 2 ? "bg-info" : "bg-light text-dark";
                                        <tr>
                                            <td>
                                                <span class="badge @rankBadgeClass" style="width: 35px;">
                                                    @if (i < 3)
                                                    {
                                                        <i class="fas fa-medal"></i>
                                                    }
                                                    @(i + 1)
                                                </span>
                                            </td>
                                            <td><strong>@product.ProductName</strong></td>
                                            <td>
                                                <span class="badge bg-primary">
                                                    @product.QuantitySold units
                                                </span>
                                            </td>
                                            <td><strong class="text-success">$@product.TotalRevenue.ToString("N2")</strong></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-chart-line fa-4x mb-3 opacity-25"></i>
                            <h5>No Sales Data</h5>
                            <p>Product sales information will appear here.</p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Sales & Performance -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-lg border-0 mb-4">
            <div class="card-header py-3 d-flex align-items-center bg-warning text-dark">
                <i class="fas fa-chart-bar me-2"></i>
                <h6 class="m-0 font-weight-bold">Sales Performance</h6>
            </div>
            <div class="card-body">
                <div class="mb-4 pb-4 border-bottom">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted"><i class="fas fa-calendar-check"></i> Total Revenue</span>
                        <strong class="text-primary">$@ViewBag.TotalRevenue?.ToString("N2")</strong>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"></div>
                    </div>
                </div>

                <div class="mb-4 pb-4 border-bottom">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted"><i class="fas fa-calendar-day"></i> Today's Revenue</span>
                        <strong class="text-success">$@ViewBag.TodayRevenue?.ToString("N2")</strong>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
                    </div>
                </div>

                <div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted"><i class="fas fa-shopping-cart"></i> Total Orders</span>
                        <strong class="text-info">@ViewBag.TotalOrders</strong>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 85%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Card -->
        <div class="card shadow-lg border-0 border-warning" style="border-width: 3px !important;">
            <div class="card-body">
                <div class="text-center">
                    <i class="fas fa-info-circle fa-3x text-warning mb-3"></i>
                    <h6 class="font-weight-bold">Agent Information</h6>
                    <p class="text-muted small mb-0">
                        As an agent, you have view-only access to products and orders. 
                        For product management or order processing, please contact staff or admin.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
