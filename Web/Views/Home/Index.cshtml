@{
    ViewBag.Title = "Home";
}

<div class="jumbotron bg-primary text-white rounded">
    <h1 class="display-4">Welcome to AWE Electronics</h1>
    <p class="lead">Discover the latest in electronics - Laptops, Phones, Audio, Gaming & More!</p>
    <hr class="my-4 bg-white">
    <p>Browse our extensive collection of quality electronics at competitive prices.</p>
    <p class="lead">
        @Html.ActionLink("Shop Now", "Index", "Products", null, new { @class = "btn btn-light btn-lg" })
    </p>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="mb-4">Featured Categories</h2>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h3>💻</h3>
                <h5 class="card-title">Laptops & Computers</h5>
                <p class="card-text">Powerful computing for work and play</p>
                @Html.ActionLink("Browse", "Index", "Products", new { categoryId = 1 }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h3>📱</h3>
                <h5 class="card-title">Mobile Phones</h5>
                <p class="card-text">Latest smartphones and tablets</p>
                @Html.ActionLink("Browse", "Index", "Products", new { categoryId = 2 }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h3>🎧</h3>
                <h5 class="card-title">Audio & Headphones</h5>
                <p class="card-text">Premium sound experiences</p>
                @Html.ActionLink("Browse", "Index", "Products", new { categoryId = 3 }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h3>🎮</h3>
                <h5 class="card-title">Gaming</h5>
                <p class="card-text">Consoles and gaming accessories</p>
                @Html.ActionLink("Browse", "Index", "Products", new { categoryId = 4 }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="mb-4">Why Choose AWE Electronics?</h2>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-4">
        <div class="text-center">
            <h1 class="text-primary">🚚</h1>
            <h4>Fast Delivery</h4>
            <p>Quick and reliable shipping across Australia</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="text-center">
            <h1 class="text-primary">✓</h1>
            <h4>Quality Guaranteed</h4>
            <p>All products come with manufacturer warranty</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="text-center">
            <h1 class="text-primary">💳</h1>
            <h4>Secure Payment</h4>
            <p>Multiple payment options with secure checkout</p>
        </div>
    </div>
</div>