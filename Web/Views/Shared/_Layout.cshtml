<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AWE Electronics</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/custom.css")" rel="stylesheet" type="text/css" />
    
    @RenderSection("Styles", required: false)
    
    <style>
        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .navbar {
            box-shadow: 0 2px 15px rgba(0,0,0,.1);
            backdrop-filter: blur(10px);
        }
        
        .nav-link.active {
            font-weight: 600;
        }
        
        .user-info {
            border-left: 1px solid rgba(255,255,255,.2);
            padding-left: 15px;
            margin-left: 10px;
        }
        
        .dropdown-menu {
            min-width: 200px;
        }
        
        footer {
            background-color: #fff;
            padding: 20px 0;
            margin-top: 40px;
            border-top: 3px solid #667eea;
        }
        
        .page-content {
            animation: fadeIn 0.5s ease;
            min-height: calc(100vh - 200px);
        }
        
        /* Page Load Animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <a href="@Url.Action("Dashboard", "Home")" class="navbar-brand">
                <i class="fas fa-bolt"></i> AWE Electronics
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                @if (Session["IsLoggedIn"] != null && (bool)Session["IsLoggedIn"])
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Dashboard", "Dashboard", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Products", "Index", "Products", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Orders", "Index", "Orders", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Reports", "Index", "Reports", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    </ul>
                    <div class="d-flex align-items-center text-white user-info">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-2"></i>
                                <span class="d-none d-md-inline">@Session["FullName"]</span>
                                <span class="badge bg-light text-primary ms-2">@Session["UserRole"]</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                        <i class="fas fa-user me-2"></i> My Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid page-content" style="padding: 30px 20px;">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="text-muted mb-2">
                        <i class="fas fa-bolt text-primary"></i>
                        <strong>AWE Electronics</strong> - Advanced Web Electronics Management System
                    </p>
                    <p class="text-muted small mb-0">
                        &copy; @DateTime.Now.Year All rights reserved. | Built with <i class="fas fa-heart text-danger"></i> using ASP.NET MVC
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom Scripts -->
    <script>
        // Active link highlighting
        $(document).ready(function() {
            var path = window.location.pathname;
            $('.navbar-nav .nav-link').each(function() {
                if ($(this).attr('href') === path) {
                    $(this).addClass('active');
                }
            });
            
            // Smooth scroll for internal links
            $('a[href^="#"]').on('click', function(e) {
                e.preventDefault();
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 1000);
                }
            });
            
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
