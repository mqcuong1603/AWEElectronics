@{
    ViewBag.Title = "Accountant Dashboard";
}

<style>
    .accountant-theme .card.bg-primary { background-color: #fd7e14 !important; }
    .accountant-theme .card.bg-success { background-color: #28a745 !important; }
    .accountant-theme .card.bg-warning { background-color: #ffc107 !important; }
    .accountant-theme .card.bg-info { background-color: #17a2b8 !important; }
    .accountant-theme .card-header.bg-dark { background-color: #b34700 !important; }
    .accountant-theme .btn-outline-primary { border-color: #fd7e14; color: #fd7e14; }
    .accountant-theme .btn-outline-primary:hover { background-color: #fd7e14; color: white; }
    .accountant-theme .btn-outline-warning { border-color: #ffc107; color: #856404; }
    .accountant-theme .btn-outline-warning:hover { background-color: #ffc107; color: #856404; }
</style>

<div class="container-fluid accountant-theme">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-calculator"></i> Accountant Dashboard
            </h2>
            <p class="lead">Welcome back, <strong>@ViewBag.UserName</strong>! <span class="badge bg-warning text-dark">Accountant</span></p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Financial Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Total Revenue</h6>
                            <h2 class="card-title mb-0">$@ViewBag.TotalRevenue?.ToString("N2")</h2>
                        </div>
                        <div>
                            <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <small>Completed orders</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Completed Orders</h6>
                            <h2 class="card-title mb-0">@ViewBag.CompletedOrders</h2>
                        </div>
                        <div>
                            <i class="fas fa-check-circle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <small>Successfully processed</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-dark">Pending Revenue</h6>
                            <h2 class="card-title mb-0 text-dark">$@ViewBag.PendingRevenue?.ToString("N2")</h2>
                        </div>
                        <div>
                            <i class="fas fa-hourglass-half fa-3x opacity-50 text-dark"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <small class="text-dark">Awaiting completion</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Total Orders</h6>
                            <h2 class="card-title mb-0">@ViewBag.TotalOrders</h2>
                        </div>
                        <div>
                            <i class="fas fa-receipt fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <small>All transactions</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Summary -->
    @if (ViewBag.PendingOrders > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-exclamation-circle"></i> Pending Transactions</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-money-bill-wave"></i> <strong>@ViewBag.PendingOrders</strong> order(s) with pending revenue of <strong>$@ViewBag.PendingRevenue?.ToString("N2")</strong>.
                            <a href="@Url.Action("Orders", "Admin")" class="alert-link">Review Orders</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-file-invoice-dollar fa-2x mb-2"></i><br />
                                View All Orders
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-warning btn-lg w-100">
                                <i class="fas fa-chart-line fa-2x mb-2"></i><br />
                                Sales Reports
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-credit-card fa-2x mb-2"></i><br />
                                Payment Records
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Breakdown -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Revenue Breakdown</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>Count</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="table-success">
                                <td><i class="fas fa-check-circle text-success"></i> Completed</td>
                                <td>@ViewBag.CompletedOrders</td>
                                <td class="text-end fw-bold">$@ViewBag.TotalRevenue?.ToString("N2")</td>
                            </tr>
                            <tr class="table-warning">
                                <td><i class="fas fa-hourglass-half text-warning"></i> Pending/Processing</td>
                                <td>@ViewBag.PendingOrders</td>
                                <td class="text-end fw-bold">$@ViewBag.PendingRevenue?.ToString("N2")</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr class="table-primary">
                                <th>Total</th>
                                <th>@ViewBag.TotalOrders</th>
                                <th class="text-end">$@((ViewBag.TotalRevenue ?? 0) + (ViewBag.PendingRevenue ?? 0)).ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Accountant Responsibilities</h5>
                </div>
                <div class="card-body">
                    <h6><i class="fas fa-check-circle text-success"></i> You Can:</h6>
                    <ul>
                        <li>View all orders and financial data</li>
                        <li>Generate sales reports</li>
                        <li>Track revenue and payments</li>
                        <li>Monitor financial performance</li>
                    </ul>
                    <h6 class="mt-3"><i class="fas fa-times-circle text-danger"></i> Restricted:</h6>
                    <ul>
                        <li>Cannot modify order status</li>
                        <li>Cannot manage products</li>
                        <li>Cannot manage user accounts</li>
                        <li>Read-only access to orders</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Notice -->
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-lightbulb"></i> <strong>Note:</strong> All financial data shown is based on completed and pending orders.
                For detailed reports, please use the Sales Reports section.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert-dismissible').fadeOut('slow');
        }, 5000);
    </script>
}
