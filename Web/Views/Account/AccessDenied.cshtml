@{
    ViewBag.Title = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                    <h2 class="text-danger">Access Denied</h2>
                    <p class="lead text-muted">You do not have permission to access this page.</p>
                    <p class="text-muted">Please contact your administrator if you believe this is an error.</p>
                    <hr />
                    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-primary">
                        <i class="fas fa-home"></i> Go to Dashboard
                    </a>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
