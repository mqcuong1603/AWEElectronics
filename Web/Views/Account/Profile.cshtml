@model AWEElectronics.DTO.User
@{
    ViewBag.Title = "Profile";
}

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <h1 class="display-3">??</h1>
                <h4>@Model.FullName</h4>
                <p class="text-muted">@Model.Role</p>
                <span class="badge bg-success">@Model.Status</span>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Profile Information</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th width="200">Username:</th>
                        <td>@Model.Username</td>
                    </tr>
                    <tr>
                        <th>Full Name:</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Role:</th>
                        <td>@Model.Role</td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td><span class="badge bg-success">@Model.Status</span></td>
                    </tr>
                    <tr>
                        <th>Member Since:</th>
                        <td>@Model.CreatedDate.ToString("MMMM dd, yyyy")</td>
                    </tr>
                </table>

                <hr />
                
                <div class="row">
                    <div class="col-md-6">
                        @Html.ActionLink("My Orders", "MyOrders", "Orders", null, new { @class = "btn btn-primary" })
                    </div>
                    <div class="col-md-6 text-end">
                        <button type="button" class="btn btn-warning">Change Password</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
