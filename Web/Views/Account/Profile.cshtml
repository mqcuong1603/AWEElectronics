@model AWEElectronics.DTO.User

@{
    ViewBag.Title = "My Profile";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-user"></i> My Profile</h2>
        <p class="text-muted">View your account information</p>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h4 class="mb-1">@Model.FullName</h4>
                    <p class="text-muted">@Model.Username</p>
                    <span class="badge bg-primary fs-6">@Model.Role</span>
                    <hr />
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Dashboard", "Home")" class="btn btn-outline-primary">
                            <i class="fas fa-home"></i> Go to Dashboard
                        </a>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>User ID:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.UserID
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Username:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Username
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Full Name:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.FullName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Email
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Phone:</strong>
                            </div>
                            <div class="col-md-8">
                                @Model.Phone
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Role:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="badge bg-primary">@Model.Role</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Status:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-danger")">
                                @Model.Status
                            </span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Member Since:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.CreatedAt.ToString("MMMM dd, yyyy")
                        </div>
                    </div>

                    @if (Model.LastLogin.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Last Login:</strong>
                            </div>
                            <div class="col-md-8">
                                @Model.LastLogin.Value.ToString("MMMM dd, yyyy hh:mm tt")
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-shield-alt"></i> Security</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        <i class="fas fa-info-circle"></i> 
                        For security reasons, password management is handled by the system administrator.
                        Please contact your administrator if you need to change your password.
                    </p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> Unable to load profile information.
    </div>
}
