@model AWEElectronics.DTO.Product

@{
    ViewBag.Title = "Product Details";
}

@if (Model == null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> Product not found.
        <a href="@Url.Action("Index", "Products")" class="alert-link">Back to Products</a>
    </div>
}
else
{
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Products
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card shadow">
                @if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <img src="@Model.ImageURL" class="card-img-top" alt="@Model.Name">
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="fas fa-image fa-5x text-muted"></i>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title mb-3">@Model.Name</h2>
                    
                    <div class="mb-3">
                        <span class="badge bg-primary">@Model.CategoryName</span>
                        @if (Model.Status == "Published")
                        {
                            <span class="badge bg-success">Published</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.Status</span>
                        }
                    </div>

                    <div class="mb-4">
                        <h3 class="text-primary mb-0">$@Model.Price.ToString("N2")</h3>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <h6 class="text-muted mb-2">SKU</h6>
                                <p class="mb-0 fw-bold">@Model.SKU</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <h6 class="text-muted mb-2">Stock Level</h6>
                                <p class="mb-0">
                                    <span class="badge @(Model.StockLevel > 10 ? "bg-success" : Model.StockLevel > 0 ? "bg-warning" : "bg-danger") fs-6">
                                        @Model.StockLevel units
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5>Description</h5>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Weight:</strong> @(Model.Weight.HasValue ? Model.Weight.Value.ToString("N2") + " kg" : "N/A")</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Warranty))
                        {
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Warranty:</strong> @Model.Warranty</p>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Brand))
                    {
                        <p class="mb-1"><strong>Brand:</strong> @Model.Brand</p>
                    }

                    <div class="mt-4">
                        <small class="text-muted">
                            Created: @Model.CreatedAt.ToString("MMM dd, yyyy")
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <span> | Updated: @Model.UpdatedAt.Value.ToString("MMM dd, yyyy")</span>
                            }
                        </small>
                    </div>
                </div>
            </div>

            @if (Model.StockLevel > 0)
            {
                <div class="alert alert-success mt-3">
                    <i class="fas fa-check-circle"></i> <strong>In Stock</strong> - Available for order
                </div>
            }
            else
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-times-circle"></i> <strong>Out of Stock</strong> - Currently unavailable
                </div>
            }
        </div>
    </div>
}
