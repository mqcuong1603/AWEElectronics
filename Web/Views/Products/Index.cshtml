@model List<AWEElectronics.DTO.Product>

@{
    ViewBag.Title = "Products";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-box"></i> Products</h2>
        <p class="text-muted">Browse and search products</p>
    </div>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search and Filter -->
<div class="card shadow mb-4">
    <div class="card-body">
        <form method="get" action="@Url.Action("Index", "Products")" class="row g-3">
            <div class="col-md-5">
                <label for="search" class="form-label">Search Products</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Search by name or SKU..." value="@ViewBag.SearchTerm">
                </div>
            </div>
            <div class="col-md-4">
                <label for="categoryId" class="form-label">Category</label>
                <select class="form-select" id="categoryId" name="categoryId">
                    <option value="">All Categories</option>
                    @if (ViewBag.Categories != null)
                    {
                        var categories = ViewBag.Categories as List<AWEElectronics.DTO.Category>;
                        foreach (var category in categories)
                        {
                            <option value="@category.CategoryID" @(ViewBag.CategoryId == category.CategoryID ? "selected" : "")>
                                @category.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Products Grid -->
@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm product-card">
                    @if (!string.IsNullOrEmpty(product.ImageURL))
                    {
                        <img src="@product.ImageURL" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted small">SKU: @product.SKU</p>
                        <p class="card-text">
                            <strong class="text-primary fs-5">$@product.Price.ToString("N2")</strong>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                Stock: 
                                <span class="badge @(product.StockLevel > 10 ? "bg-success" : product.StockLevel > 0 ? "bg-warning" : "bg-danger")">
                                    @product.StockLevel
                                </span>
                            </small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="@Url.Action("Details", "Products", new { id = product.ProductID })" class="btn btn-sm btn-outline-primary w-100">
                            <i class="fas fa-info-circle"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <p class="text-muted">Showing @Model.Count product(s)</p>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No products found. 
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
        {
            <a href="@Url.Action("Index", "Products")" class="alert-link">Clear search</a>
        }
    </div>
}

@section Styles {
    <style>
        .product-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }
    </style>
}
