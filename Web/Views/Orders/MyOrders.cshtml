@{
    ViewBag.Title = "My Orders";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-bag-check"></i> My Orders</h2>
            <p class="lead">View and track your order history</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle"></i> 
                <strong>Coming Soon!</strong> Your order history will be displayed here. 
                This feature is currently under development.
            </div>

            <div class="text-center py-5">
                <i class="bi bi-bag-x" style="font-size: 5rem; color: #6c757d;"></i>
                <h4 class="mt-3">No Orders Yet</h4>
                <p class="text-muted">Start shopping to see your orders here!</p>
                <a href="@Url.Action("Index", "Products")" class="btn btn-primary mt-3">
                    <i class="bi bi-shop"></i> Browse Products
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert-dismissible').fadeOut('slow');
        }, 5000);
    </script>
}
