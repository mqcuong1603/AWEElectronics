@model AWEElectronics.DTO.Order

@{
    ViewBag.Title = "Order Details";
    var payment = ViewBag.Payment as AWEElectronics.DTO.Payment;
}

@if (Model == null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> Order not found.
        <a href="@Url.Action("Index", "Orders")" class="alert-link">Back to Orders</a>
    </div>
}
else
{
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Index", "Orders")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Orders
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Order Information -->
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Order #@Model.OrderCode</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
                            <p><strong>Customer:</strong> @Model.CustomerName</p>
                            <p><strong>Email:</strong> @Model.CustomerEmail</p>
                            <p><strong>Phone:</strong> @Model.CustomerPhone</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Status:</strong>
                                <span class="badge 
                                    @(Model.Status == "Pending" ? "bg-warning" : 
                                      Model.Status == "Processing" ? "bg-info" : 
                                      Model.Status == "Shipped" ? "bg-primary" : 
                                      Model.Status == "Delivered" ? "bg-success" : "bg-danger") fs-6">
                                    @Model.Status
                                </span>
                            </p>
                            <p><strong>Payment Status:</strong>
                                <span class="badge 
                                    @(Model.PaymentStatus == "Paid" ? "bg-success" : 
                                      Model.PaymentStatus == "Pending" ? "bg-warning" : "bg-danger") fs-6">
                                    @Model.PaymentStatus
                                </span>
                            </p>
                            @if (Model.EstimatedDeliveryDate.HasValue)
                            {
                                <p><strong>Est. Delivery:</strong> @Model.EstimatedDeliveryDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                    {
                        <div class="border-top pt-3">
                            <h6><strong>Shipping Address:</strong></h6>
                            <p class="mb-0">@Model.ShippingAddress</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="border-top pt-3 mt-3">
                            <h6><strong>Notes:</strong></h6>
                            <p class="mb-0">@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Order Items</h5>
                </div>
                <div class="card-body">
                    @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.ProductName</strong>
                                                <br />
                                                <small class="text-muted">SKU: @item.SKU</small>
                                            </td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end">$@item.UnitPrice.ToString("N2")</td>
                                            <td class="text-end"><strong>$@((item.Quantity * item.UnitPrice).ToString("N2"))</strong></td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                                        <td class="text-end">$@Model.SubTotal.ToString("N2")</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Tax:</strong></td>
                                        <td class="text-end">$@Model.Tax.ToString("N2")</td>
                                    </tr>
                                    <tr class="table-primary">
                                        <td colspan="3" class="text-end"><strong>Grand Total:</strong></td>
                                        <td class="text-end"><strong class="fs-5">$@Model.GrandTotal.ToString("N2")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No items in this order.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Actions Sidebar -->
        <div class="col-md-4">
            <!-- Update Status -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-edit"></i> Update Status</h6>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("UpdateStatus", "Orders", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="orderId" value="@Model.OrderID" />
                        
                        <div class="mb-3">
                            <label class="form-label">Current Status</label>
                            <p class="mb-0">
                                <span class="badge 
                                    @(Model.Status == "Pending" ? "bg-warning" : 
                                      Model.Status == "Processing" ? "bg-info" : 
                                      Model.Status == "Shipped" ? "bg-primary" : 
                                      Model.Status == "Delivered" ? "bg-success" : "bg-danger") fs-6">
                                    @Model.Status
                                </span>
                            </p>
                        </div>

                        <div class="mb-3">
                            <label for="newStatus" class="form-label">New Status</label>
                            <select class="form-select" id="newStatus" name="newStatus" required>
                                @if (Model.Status == "Pending")
                                {
                                    <option value="Processing">Processing</option>
                                    <option value="Cancelled">Cancelled</option>
                                }
                                else if (Model.Status == "Processing")
                                {
                                    <option value="Shipped">Shipped</option>
                                    <option value="Cancelled">Cancelled</option>
                                }
                                else if (Model.Status == "Shipped")
                                {
                                    <option value="Delivered">Delivered</option>
                                }
                            </select>
                        </div>

                        @if (Model.Status != "Delivered" && Model.Status != "Cancelled")
                        {
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-save"></i> Update Status
                            </button>
                        }
                    }
                </div>
            </div>

            <!-- Cancel Order -->
            @if (Model.Status == "Pending" || Model.Status == "Processing")
            {
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white">
                        <h6 class="mb-0"><i class="fas fa-times-circle"></i> Cancel Order</h6>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Cancel", "Orders", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to cancel this order?');" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="orderId" value="@Model.OrderID" />
                            
                            <p class="text-muted small">Cancelling this order will restore the stock and update the payment status.</p>
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-ban"></i> Cancel Order
                            </button>
                        }
                    </div>
                </div>
            }

            <!-- Payment Information -->
            @if (payment != null)
            {
                <div class="card shadow mt-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-credit-card"></i> Payment Info</h6>
                    </div>
                    <div class="card-body">
                        <p><strong>Method:</strong> @payment.PaymentMethod</p>
                        <p><strong>Amount:</strong> $@payment.Amount.ToString("N2")</p>
                        <p><strong>Status:</strong>
                            <span class="badge @(payment.Status == "Paid" ? "bg-success" : payment.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                @payment.Status
                            </span>
                        </p>
                        @if (payment.TransactionID != null)
                        {
                            <p class="small"><strong>Transaction ID:</strong> @payment.TransactionID</p>
                        }
                        <p class="small text-muted">@payment.PaymentDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                    </div>
                </div>
            }
        </div>
    </div>
}
