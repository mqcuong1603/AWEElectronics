@model List<AWEElectronics.DTO.Order>

@{
    ViewBag.Title = "Orders";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-shopping-cart"></i> Orders</h2>
        <p class="text-muted">Manage and track orders</p>
    </div>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Section -->
<div class="card shadow mb-4">
    <div class="card-body">
        <form method="get" action="@Url.Action("Index", "Orders")" class="row g-3">
            <div class="col-md-4">
                <label for="status" class="form-label">Order Status</label>
                <select class="form-select" id="status" name="status">
                    <option value="All" @(ViewBag.SelectedStatus == null || ViewBag.SelectedStatus == "All" ? "selected" : "")>All Orders</option>
                    <option value="Pending" @(ViewBag.SelectedStatus == "Pending" ? "selected" : "")>Pending</option>
                    <option value="Processing" @(ViewBag.SelectedStatus == "Processing" ? "selected" : "")>Processing</option>
                    <option value="Shipped" @(ViewBag.SelectedStatus == "Shipped" ? "selected" : "")>Shipped</option>
                    <option value="Delivered" @(ViewBag.SelectedStatus == "Delivered" ? "selected" : "")>Delivered</option>
                    <option value="Cancelled" @(ViewBag.SelectedStatus == "Cancelled" ? "selected" : "")>Cancelled</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="startDate" class="form-label">From Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate" value="@ViewBag.StartDate">
            </div>
            <div class="col-md-3">
                <label for="endDate" class="form-label">To Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate" value="@ViewBag.EndDate">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Orders Table -->
@if (Model != null && Model.Any())
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Order Code</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th class="text-end">Total</th>
                            <th>Status</th>
                            <th>Payment</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@order.OrderCode</strong>
                                </td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>@order.CustomerName</td>
                                <td class="text-end">
                                    <strong>$@order.GrandTotal.ToString("N2")</strong>
                                </td>
                                <td>
                                    <span class="badge 
                                        @(order.Status == "Pending" ? "bg-warning" : 
                                          order.Status == "Processing" ? "bg-info" : 
                                          order.Status == "Shipped" ? "bg-primary" : 
                                          order.Status == "Delivered" ? "bg-success" : "bg-danger")">
                                        @order.Status
                                    </span>
                                </td>
                                <td>
                                    <span class="badge 
                                        @(order.PaymentStatus == "Paid" ? "bg-success" : 
                                          order.PaymentStatus == "Pending" ? "bg-warning" : "bg-danger")">
                                        @order.PaymentStatus
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Details", "Orders", new { id = order.OrderID })" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                <p class="text-muted">Total: @Model.Count order(s)</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No orders found.
        @if (ViewBag.SelectedStatus != null && ViewBag.SelectedStatus != "All")
        {
            <a href="@Url.Action("Index", "Orders")" class="alert-link">View all orders</a>
        }
    </div>
}
